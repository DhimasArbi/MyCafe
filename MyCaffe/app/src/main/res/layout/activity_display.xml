<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".MainActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="700dp">

            <TextView
                android:id="@+id/coffeetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/besans"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="SANA SINI COFFEE"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:gravity="center"/>



            <TextView
                android:id="@+id/coffeenamedetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/coffeetitle"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="1dp"
                android:paddingBottom="10dp"
                android:text="Pesanan "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/coffeetotalitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/coffeenamedetail"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Total item "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/coffeetotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/coffeetotalitem"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Total "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/coffeethankful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/coffeetotal"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/halimun"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Thank You"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:gravity="center"/>


            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coffeetitle"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"></LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>