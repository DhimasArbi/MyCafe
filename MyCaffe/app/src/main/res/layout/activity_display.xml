<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    tools:context=".DisplayActivity">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/coffeetitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/besans"
                android:gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="SANA SINI COFFEE"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/coffeenamedetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/coffeetitle"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="1dp"
                android:paddingBottom="10dp"
                android:text="Pesanan"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/coffeetotalitem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/coffeenamedetail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Total item"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hargaItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/coffeetotalitem"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Harga"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/coffeetotal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/hargaItem"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Total "
                android:textColor="@color/black"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/coffeethankful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/coffeetotal"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/halimun"
                android:gravity="center"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="Thank You"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/coffeetitle"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"></LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/homeBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="9dp"
        android:text="home"
        android:drawableLeft="@drawable/home"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"></Button>
</RelativeLayout>